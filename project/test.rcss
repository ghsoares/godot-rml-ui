body {
	position: relative;

	filter: drop-shadow(#00000099 4px 4px 4px);
}

@keyframes test_animation {
	0% {
		left: 0px;

		filter: hue-rotate(0deg);
	},
	50% {
		left: 128px;
	},
	to {
		left: 0px;

		filter: hue-rotate(360deg);
	}
}

#round {
	position: absolute;
	display: block;
	width: 128px;
	height: 128px;
	border-radius: 32px;

	overflow: hidden;
	animation: test_animation 2s infinite;

	decorator: linear-gradient(to top right, red, white, blue);
}

@keyframes test_animation2 {
	0% {
		left: 32px;
		transform: rotate(0deg);
	},
	50% {
		left: -96px;
	},
	to {
		left: 32px;
		transform: rotate(360deg);
	}
}

#animated {
	display: block;
	position: absolute;
	background-color: blue;
	top: 32px;
	width: 32px;
	height: 32px;
	animation: test_animation2 2s infinite;
}

#text {
	position: absolute;
	color: black;
	top: 32px;
	left: 32px;
}
